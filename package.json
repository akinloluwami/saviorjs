{
  "name": "saviorjs",
  "version": "1.0.0",
  "description": "A collection of JavaScript utility functions",
  "main": "dist/saviorjs.js",
  "types": "dist/saviorjs.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "keywords": [
    "utility",
    "javascript",
    "functions"
  ],
  "author": "Akinkunmi",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12"
  }
}
